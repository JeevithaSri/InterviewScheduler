@model CandidateAPI.InterviewSchedulerModel.Schedule

@{
    ViewData["Title"] = "UpdateSchedule";
}
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/Create.css" />

</head>

<body>
    @*<section class="get-in-touch">*@

        <center>
            <div class="container" style="color:green">
                <h2 class="title">UPDATE SCHEDULE</h2>
            </div>
        </center>
       

        <div class="container">
            <form class="form-horizontal" asp-action="UpdateSchedule">
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Name">Name</label>

                    <div class="col-sm-8">
                        <input asp-for="Name" class="input-text js-input" type="text" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="CandidateId">Candidate Name</label>

                    <div class="col-sm-8" asp-for="CandidateId">
                        @Html.DropDownListFor(model => model.CandidateId, new SelectList(ViewBag.specializationCandidate, "Value", "Text"), "--- Select ---")
                        <span asp-validation-for="CandidateId" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="label" asp-for="PanelId">Panel Name</label>

                    <div class="col-sm-8" asp-for="PanelId">
                        @Html.DropDownListFor(model => model.PanelId, new SelectList(ViewBag.specializationPanel, "Value", "Text"), "--- Select ---")
                        <span asp-validation-for="PanelId" class="text-danger"></span>


                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="JobId">Job Role</label>

                    <div class="col-sm-8" asp-for="JobId">
                        @Html.DropDownListFor(model => model.JobId, new SelectList(ViewBag.specializationJob, "Value", "Text"), "--- Select ---")

                        <span asp-validation-for="JobId" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="LevelId">Level Name</label>

                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.LevelId, new SelectList(ViewBag.specializationLevel, "Value", "Text"), "--- Select ---")
                        <span asp-validation-for="LevelId" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Date">Date</label>

                    <div class="col-sm-8">
                        <input asp-for="Date" class="input-text js-input" type="text" />
                        <span asp-validation-for="Date" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="TimeFrom">Time From</label>

                    <div class="col-sm-8">
                        <input asp-for="TimeFrom" class="input-text js-input" type="text" />
                        <span asp-validation-for="TimeFrom" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="TimeTo">Time To</label>

                    <div class="col-sm-8">
                        <input asp-for="TimeTo" class="input-text js-input" type="text" />
                        <span asp-validation-for="TimeTo" class="text-danger"></span>

                    </div>
                </div>
                <center>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <input class="btn btn-success" type="submit" value="Submit" />
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <a asp-action="ViewSchedule" class="btn btn-dark" style="color:white">Back</a>
                            </div>
                        </div>


                    </div>
                </center>
            </form>
        </div>
    @*</section>*@

</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
