

<head>
    <style>
        .tiles .link-tiles {
            margin-bottom: 20px;
            background: #090226;
            height: 137px;
        }

            .tiles .link-tiles a {
                display: inline-flex;
                width: 100%;
                height: 100%;
                align-items: center;
                position: relative;
                color: white;
                font-weight: 500;
                font-size: 17px;
                line-height: 20px;
                padding-left: 2.2rem;
                text-transform: uppercase;
                border-radius: 5px;
                text-decoration: none;
            }


        .link-tiles:hover {
            background: #0f194d;
            transition: all, 0.4s, ease;
        }

            .link-tiles:hover a {
                color: lightgreen;
            }

            .link-tiles:hover a {
                color: lightgreen;
            }
    </style>
</head>
<body>
    <div class="justify-content-xl-center" align="center">
        <br />
        <section class="tiles">
            <div class="container">
                <h2 style="font-family: 'Comic Sans MS'">HR Dashboard</h2>
                <br /><br />
                <div class="row">
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Jobs", "ViewJob", "Job")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="padding-left: 3rem; border-radius: 10px;">
                            @Html.ActionLink("Interview Level", "ViewLevel", "Level")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="padding-left: 3rem; border-radius: 10px;">
                            @Html.ActionLink("Panel", "ViewPanel", "Panel")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Candidate", "ViewCandidate", "Candidate")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Candidate Availability", "ViewCandidateAvailability", "CandidateAvailability")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Panel Availability", "ViewPanelAvailability", "PanelAvailability")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Interview Schedule", "ViewSchedule", "Schedule")
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="link-tiles" style="border-radius: 10px;">
                            @Html.ActionLink("Interview Status", "ViewInterviewStatus", "InterviewStatus")
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
    </div>
</body>
