@model CandidateAPI.InterviewSchedulerModel.Job

@{
    ViewData["Title"] = "UpdateJob";
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/Create.css" />

</head>
<body>
    @*<section class="get-in-touch">*@

        <center>
            <div class="container" style="color:green">
                <h2 class="title">UPDATE JOB</h2>
            </div>
        </center>
      

        <div class="container">

            <form class="form-horizontal" asp-action="UpdateJob">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="JobId">Job ID</label>

                    <div class="col-sm-8">

                        <input asp-for="JobId" class="form-control" type="text" disabled />
                        <span asp-validation-for="JobId" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="JobRole">Job Role</label>

                    <div class="col-sm-8">

                        <input asp-for="JobRole" class="form-control" type="text" placeholder="Update Job Role" />
                        <span asp-validation-for="JobRole" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Available">Available Seats</label>
                    <div class="col-sm-8">
                        <input asp-for="Available" class="form-control" type="number" placeholder="Enter Available Seats" />

                        <span asp-validation-for="Available" class="text-danger"></span>
                    </div>

                </div>

                <center>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <input class="btn btn-success" type="submit" value="Submit" />
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <a asp-action="ViewJob" class="btn btn-dark" style="color:white">Back</a>
                            </div>
                        </div>


                    </div>
                </center>
            </form>
        </div>
        @*</section>*@
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
