@model CandidateAPI.InterviewSchedulerModel.Candidate

@{
    ViewData["Title"] = "UpdateCandidate";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />

    <link rel="stylesheet" href="~/css/Create.css" />

</head>
<body>
    @*<section class="get-in-touch">*@

        <center>
            <div class="container" style="color:green">
                <h2 class="title">UPDATE CANDIDATE</h2>
            </div>
        </center>
      


        <div class="container">

            <form class="form-horizontal" asp-action="UpdateCandidate">
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Name">Name:</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Name" type="text" placeholder="Name" required autocomplete="chrome-off" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
             
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Dob">DOB:</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Dob" placeholder="DOB" required autocomplete="chrome-off" />
                        <span asp-validation-for="Dob" class="text-danger"></span>

                    </div>
                </div>
               
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Address">Address:</label>
                    <div class="col-sm-8">

                        <input class="form-control" asp-for="Address" placeholder="Address" required autocomplete="chrome-off" />
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                </div>
               
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Mobileno">Mobile no:</label>
                    <div class="col-sm-8">
                        <input asp-for="Mobileno" class="form-control" placeholder="Mobile Number" required autocomplete="chrome-off" />
                        <span asp-validation-for="Mobileno" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group has-success" style="margin-bottom: 0.7cm;">
                    <label class="control-label col-sm-2" asp-for="Qualification">Qualification:</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Qualification" placeholder="Qualification" required autocomplete="chrome-off" />
                        <span asp-validation-for="Qualification" class="text-danger"></span>

                    </div>
                </div>
               
                <div class="form-group has-success" style="margin-bottom: 0.7cm;">
                    <label class="control-label col-sm-2" asp-for="Email">Email:</label>
                    <div class="col-sm-8">
                        <input asp-for="Email" class="form-control" placeholder="Email" required autocomplete="chrome-off" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                </div>
            
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="JobId">Job Role</label>

                    <div class="col-sm-8">
                        <div asp-for="JobId">
                            <input asp-for="JobId" class="form-control" />

                        </div>
                        <span asp-validation-for="JobId" class="text-danger"></span>
                    </div>
                </div>
               
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="LevelId">Interview Level</label>

                    <div class="col-sm-8">
                        <input asp-for="LevelId" class="form-control" />

                        <span asp-validation-for="LevelId" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Status">Interview Status:</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="Status" type="text" placeholder="Interview Status" required autocomplete="chrome-off" />
                        <span asp-validation-for="Status" class="text-danger"></span>

                    </div>
                </div><br />
                <div class="form-group has-success">
                    <label class="control-label col-sm-2" asp-for="Resume">Resume:</label>
                    <div class="col-sm-8">

                        <input class="form-control" asp-for="Resume" type="file" />
                        <span asp-validation-for="Resume" class="text-danger"></span>

                    </div>
                </div>
                <br />
                <center>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <input class="btn btn-success" type="submit" value="Submit" />
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <a asp-action="ViewCandidate" class="btn btn-dark" style="color:white">Back</a>
                            </div>
                        </div>


                    </div>
                </center>
                </form>
        </div>
        @*</section>*@
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
