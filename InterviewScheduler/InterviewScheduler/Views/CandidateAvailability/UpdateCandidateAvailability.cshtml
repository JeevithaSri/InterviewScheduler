@model CandidateAPI.InterviewSchedulerModel.CandidateAvailability

@{
    ViewData["Title"] = "UpdateCandidateAvailability";
}

<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/Create.css" />

</head>

<body>
    @*<section class="get-in-touch">*@

        <center>
            <div class="container" style="color:green">
                <h2 class="title">UPDATE CANDIDATE AVAILABILITY</h2>
            </div>
        </center>
       

        <div class="container">
            <form asp-action="UpdateCandidateAvailability" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group has-success">
                    <label asp-for="CandidateId" class="control-label col-sm-2">Candidate Name</label>

                    <div class="col-sm-8" asp-for="CandidateId">
                        @Html.DropDownListFor(model => model.CandidateId, new SelectList(ViewBag.specializationCandidate, "Value", "Text"), "--- Select ---")
                        <span asp-validation-for="CandidateId" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label asp-for="AvailableDate" class="control-label col-sm-2">Available Date</label>

                    <div class="col-sm-8">
                        <input asp-for="AvailableDate" class="form-control" />
                        <span asp-validation-for="AvailableDate" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label asp-for="AvailableTimeFrom" class="control-label col-sm-2">Available Time From</label>

                    <div class="col-sm-8">
                        <input asp-for="AvailableTimeFrom" class="form-control" />
                        <span asp-validation-for="AvailableTimeFrom" class="text-danger"></span>

                    </div>
                </div>
                <div class="form-group has-success">
                    <label asp-for="AvailableTimeTo" class="control-label col-sm-2">Available Time To</label>

                    <div class="col-sm-8">
                        <input asp-for="AvailableTimeTo" class="form-control" />
                        <span asp-validation-for="AvailableTimeTo" class="text-danger"></span>

                    </div>
                </div>
                <center>
                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <input class="btn btn-success" type="submit" value="Submit" />
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <div class="form-group has-success">
                                <a asp-action="ViewCandidateAvailability" class="btn btn-dark" style="color:white">Back</a>
                            </div>
                        </div>


                    </div>
                </center>
            </form>
        </div>


    @*</section>*@

</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
